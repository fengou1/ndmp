include $(CTI_ROOT)/Makefiles/Makefile.defs

CODEMGR_WS_SH=\
if [ -n "$(CODEMGR_ROOT)" ]; then \
echo "$(CODEMGR_ROOT)"; \
else \
echo "$(PWD)"; \
fi

CODEMGR_WS= ${CODEMGR_WS_SH:sh}

SUITEDIR	= ndmp/protocol

CTIDIR.BIN	= /bin
CTIDIR.CONFIG	= /config
CTIDIR.LIB	= /lib

CTIDIRS 	= $(CTIDIR.BIN) $(CTIDIR.CONFIG) $(CTIDIR.LIB)

ROOT.TEST	= /tests \
		  /tests/protocol-tests \
		  /tests/protocol-tests/CONFIG \
		  /tests/protocol-tests/TAPE   \
		  /tests/protocol-tests/DATA   \
		  /tests/protocol-tests/POST   \
		  /tests/protocol-tests/MOVER  \
		  /tests/protocol-tests/SCSI   \
		  /tests/protocol-tests/CONNECT   \
		  /tests/configure 

TARGETDIRS	= $(CTIDIRS) $(ROOT.TEST) 

TETFILES	= tet_scen \
		  STC.INFO \
		  LICENSE \
		  README
#
# Set this to TRUE if the tet thread libraries
# are required.
#
TET_THREADS	=

# prepend the ROOT prefix

ROOTDIRS	= $(TARGETDIRS:%=$(ROOT)%)
